<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/adapter_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="動画タイトル"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/adapter_imageview"
        app:layout_constraintEnd_toStartOf="@+id/adapter_menu_imageview"
        app:layout_constraintStart_toEndOf="@+id/adapter_imageview"
        app:layout_constraintTop_toTopOf="@+id/adapter_imageview" />

    <ImageView
        android:id="@+id/adapter_imageview"
        android:layout_width="112dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_outline_local_movies_24" />

    <ImageView
        android:id="@+id/adapter_menu_imageview"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adapter_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_outline_more_vert_24" />

</androidx.constraintlayout.widget.ConstraintLayout>